<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
  <!-- Handler Mapping -->
   <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
      <property name="mappings">
         <props>
            <prop key="stud.htm">sic</prop>
         </props>
      </property>
   </bean>
   <!-- Controllers -->
    <bean id="sic"  class="com.nt.controller.StudentInsertController">
        <property name="commandName" value="stCmd"/>
        <property name="commandClass" value="com.nt.command.StudentCommand"/>
        <property name="formView" value="student"/>
        <property name="successView" value="result"/>
        <property name="sessionForm" value="true"/>
        <property name="validator"  ref="stValidator"/>
        <constructor-arg ref="stService"/>
    </bean>
    
    <!-- Properties file cfg -->
    <bean id="messageSource"  class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="com/nt/commons/application"/>
    </bean>
    
    <!-- Validator class cfg -->
     <bean id="stValidator"  class="com.nt.validator.StudentCommandValidator"/>

    
    <!-- view Resolver -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
  

</beans>
